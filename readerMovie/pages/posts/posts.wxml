<import src='post-item/post-item-template.wxml' />
<view>
  <swiper indicator-dots="true" autoplay="true" interval="2000" circular="true">
    <swiper-item>
      <image src="/images/dm1.jpg"/>
    </swiper-item>
    <swiper-item>
      <image src="/images/dm2.jpg"/>
    </swiper-item>
    <swiper-item>
      <image src="/images/dm3.jpg"/>
    </swiper-item>
  </swiper>
  <block wx:for="{{post_arr}}" wx:for-item="item" wx:for-index="index" wx:key="{{key}}">
    <view catchtap='onTapDetail' data-postId='{{item.postId}}'>
      <template is="postItem" data="{{item}}"/>
    </view>
  </block> 
</view>