.uesr-view{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.user-image{
  width:200rpx;
  height:200rpx;
  border-radius:50%;
  margin-top: 160rpx;
}

.user-name{
  margin-top: 100rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.user-moot{
  margin-top: 200rpx;
  width: 200rpx;
  height: 80rpx;
  border: 1px solid #405f80;
  text-align: center;
  border-radius: 5px;
}

.moot{
  font-size: 22rpx;
  font-weight: bold;
  color: #405f80;
  line-height: 80rpx;
}

page{
  background-color: #b3d4db;
  height: 100%;
